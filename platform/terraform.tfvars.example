# Golden Path Platform Configuration
# Copy this to terraform.tfvars and customize for your environment

# AWS Configuration
aws_region    = "us-east-2"  # Match your SSO region
environment   = "platform"

# EC2 Configuration  
instance_type   = "t3.large"    # 2 vCPU, 8GB - good for platform workloads
key_pair_name   = "your-key-name"  # Replace with your AWS key pair

# Network Security (restrict in production)
allowed_cidr_blocks = [
  "0.0.0.0/0"  # Replace with your IP range for better security
]

# Multi-Account Configuration
target_accounts = {
  dev   = "405474549744"
  stage = "806571984724" 
  prod  = "110948415536"
}

# SSO Configuration
sso_profiles = {
  dev   = "sso-dev"
  stage = "sso-stage"
  prod  = "sso-prod"
}
